.search-header{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.search-header .left{
  width: 10%;
  height: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.search-header .content{
  width: 85%;
  height: 100%;
  position: relative;
  margin: 0 2.5%;
}
.content input{
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  border-radius: 50rpx;
  background: #fff;
  font-size: 28rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.content image{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  z-index: 1;
  width: 40rpx;
  height: 40rpx;
}
.search-header .right{
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
}
.search-header image{
  width: 50rpx;
  height: 50rpx;
}