<camera device-position="back" style="width:100%;height:300px"></camera>

<view>
  <button type="primary" bindtap="photo">拍照</button>
  <button type="primary" bindtap="videoStart">开始录像</button>
  <button type="primary" bindtap="videoEnd">结束录像</button>
</view>
<view wx:if="{{photoSrc}}">
  <image src="{{photoSrc}}" mode="aspectFit" style="width:100px;height:100px"></image>
</view>
<view wx:if="{{videoSrc}}">
  <video src="{{videoSrc}}" style="width:200px;height:200px"></video>
</view>

